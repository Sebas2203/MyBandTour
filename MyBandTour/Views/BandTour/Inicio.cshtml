
@{
    ViewBag.Title = "HomePage";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section SearchNav {
    <div class="nav-left" style="color:white;">
        @Html.ActionLink("MyBandTour", "Inicio", "BandTour", new { area = "" }, new { @class = "navbar-brand" })
        <input type="text" placeholder="Busca un concierto" class="search-box" />
        <button>Buscar</button>
    </div>
}


<h2>Conciertos</h2>

<br />

@if (Session["Authenticate"] != null && (bool)Session["Authenticate"] == true && Session["Username"] != null)
{
    <div class="AdminButtons">
        @Html.ActionLink("Agregar Concierto", "AgregarConcierto", "BandTour", new {area = ""}, new {@class = "btn"})
