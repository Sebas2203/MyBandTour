<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>MyBandTour</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/css/Styles.css" rel="stylesheet" />
    <script src="~/Scripts/js/jqueryLogic.js"></script>
</head>
<body>
    <nav class="navbar">
        <div class="nav-container">
            <div class="nav-left">
                @RenderSection("SearchNav", required: false)
            </div>

            <div class="nav-right">
                @Html.ActionLink("Home", "Inicio", "BandTour", new { area = "" }, new { @class = "nav-link" })
                <div class="divider"></div>

                @if (Session["Authenticate"] != null && (bool)Session["Authenticate"] == true && Session["Username"] != null)
                {
                    <span class="nav-link username">@Session["Username"]</span>
                    <div class="divider"></div>
                    @Html.ActionLink("Cerrar Sesión", "Logout", "BandTour", new { area = "" }, new { @class = "nav-link" })
                }
                else
                {
                    <a href="@Url.Action("AdminLogin", "BandTour")" class="login-btn">Log in</a>
                }
            </div>
        </div>
    </nav>




    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - MyBandTour</p>
        </footer>
    </div>

    <script src="~/Scripts/js/jqueryLogic.js"></script>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
