<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>MyBandTour</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/css/Styles.css" rel="stylesheet" />
</head>
<body>
    <nav class="navbar">
        <div class="nav-left" style="color:white;">
            @Html.ActionLink("MyBandTour", "HomePage", "Home", new { area = "" }, new { @class = "navbar-brand" })
            <input type="text" placeholder="Busca un concierto" class="search-box" />
        </div>
        <div class="nav-right">
            @Html.ActionLink("Home", "HomePage", "Home", new { area = "" }, new { @class = "nav-link" })
            @Html.ActionLink("Contact", "Support", "Home", new { area = "" }, new { @class = "nav-link" })
            <div class="divider"></div>

            @* Mostrar nombre de usuario si está autenticado *@
            @if (Session["Authenticate"] != null && (bool)Session["Authenticate"] == true && Session["Username"] != null)
            {
                <span class="nav-link username">@Session["Username"]</span>
                <div class="divider"></div>
                @Html.ActionLink("Cerrar Sesión", "Logout", "Home", new { area = "" }, new { @class = "nav-link" })
            }
            else
            {
                <a href="@Url.Action("AdminLogin", "Home")" class="login-btn">Log in</a>
            }
        </div>
    </nav>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - MyBandTour</p>
        </footer>
    </div>

    <script src="~/Scripts/js/jqueryLogic.js"></script>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
